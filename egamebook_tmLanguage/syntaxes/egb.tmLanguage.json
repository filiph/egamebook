{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Egamebook",
	"patterns": [
		{
			"include": "#object_definitions"
		},
		{
			"include": "#approach_from"
		},
		{
			"include": "#map_to_dart_block"
		},
		{
			"include": "#map_keys"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#variable_names"
		},
		{
			"include": "#brackets"
		},
		{
			"include": "#ruleset"
		},
		{
			"include": "#substitutions"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#markdown"
		}
	],
	"repository": {
		"object_definitions": {
			"patterns": [{
				"name": "keyword.egb",
				"match": "^(ROOM|APPROACH|ACTION):"
			}]
		},
		"approach_from": {
			"patterns": [{
				"name": "keyword.egb",
				"match": "\\sFROM\\s"
			}]
		},
		"map_to_dart_block": {
			"patterns": [{
				"begin": "^((PREREQUISITES|SUCCESS_EFFECT|RESCUE_PREREQUISITES|RESCUE_EFFECT|CONTINUATION_OF_FAILURE_EFFECT|FIGHT_SITUATION):)$",
				"end": "^$",
				"beginCaptures": {
					"1": {"name": "keyword.egb"}
				},
				"patterns": [
					{"include": "source.dart"}
				]
			}]
		},
		"map_keys": {
			"patterns": [{
				"begin": "^((RULE|PREREQUISITES):) ",
				"end": "$",
				"beginCaptures": {
					"1": {"name": "keyword.egb"}
				},
				"patterns": [
					{"include": "source.dart"}
				]
			},{
				"name": "keyword.egb",
				"match": "^(VARIANT_OF|RULE|FLAGS|POS|DESCRIPTION|FIRST_DESCRIPTION|HINT|WHERE|GROUND_MATERIAL|FIGHT_SITUATION|AFTER_MONSTERS_CLEARED|COMMAND|FOR_LOCATION|PREREQUISITES|COMPLETE_SUCCESS_PROBABILITY|COMPLETE_SUCCESS_DESCRIPTION|FAILURE_BEGINNING_DESCRIPTION|RESCUE_COMMAND|RESCUE_HINT|RESCUE_PREREQUISITES|RESCUE_EFFECT|RESCUE_DESCRIPTION|CONTINUATION_OF_FAILURE_COMMAND|CONTINUATION_OF_FAILURE_HINT|CONTINUATION_OF_FAILURE_EFFECT|CONTINUATION_OF_FAILURE_DESCRIPTION|SUCCESS_EFFECT|INK):"
			}]
		},
		"constants": {
			"patterns": [{
				"name": "constant.language.egb",
				"match": "(\\s|^)\\$(IMPLICIT|NONE|DEFAULT|IDLE|__END_OF_ROAM__)(\\s|$)"
			}]
		},
		"variable_names": {
			"patterns": [{
				"name": "variable.name.egb",
				"match": "\\$[\\w_]+"
			}]
		},
		"brackets": {
			"patterns": [{
				"begin": "^(\\[\\[CODE\\]\\])$",
				"end": "^(\\[\\[ENDCODE\\]\\])$",
				"captures": {
					"1": {"name": "keyword.egb"}
				},
				"patterns": [
					{"include": "source.dart"}
				]
			},{
				"begin": "(\\[\\[IF) ",
				"end": "(\\]\\])",
				"captures": {
					"1": {"name": "keyword.egb"}
				},
				"patterns": [
					{"include": "source.dart"}
				]
			},{
				"name": "keyword.egb",
				"match": "\\[\\[ELSE\\]\\]"
			},{
				"name": "keyword.egb",
				"match": "\\[\\[ENDIF\\]\\]"
			}]
		},
		"ruleset": {
			"patterns": [{
				"begin": "^(\\[\\[RULE\\]\\])$",
				"end": "^(\\[\\[THEN\\]\\])$",
				"captures": {
					"1": {"name": "keyword.egb"}
				},
				"patterns": [
					{"include": "source.dart"}
				]
			},{
				"name": "keyword.egb",
				"match": "^\\[\\[(RULESET|ENDRULE|ENDRULESET)\\]\\]$"
			}]
		},
		"substitutions": {
			"patterns": [{
				"name": "variable.other",
				"match": "\\[\\w.*?\\w\\]"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.double-slash",
				"begin": "^//",
				"end": "$",
				"patterns": [{
					"match": "\\bTODO\\b",
					"name": "keyword.todo"
				}]
			},{
				"name": "comment.block.notes",
				"begin": "^NOTES:",
				"end": "NOT_IMPLEMENTED",
				"patterns": [{
					"match": "\\bTODO\\b",
					"name": "keyword.todo"
				}]
			}]
		},
		"markdown": {
			"name": "markup.italic",
			"begin": "(\\s|^)_\\S",
			"end": "((\\S_(\\s|$))|$)"
		}
	},
	"scopeName": "source.egb"
}